<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clima.MainPage"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="false">

    <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
             <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image 
                Source="imgnoite.jpg"
                Aspect="AspectFill"
                Grid.RowSpan="4"
                Grid.ColumnSpan="3"/>


        <Frame 
             x:Name="temperatura"
             Grid.Column="0"
             Grid.RowSpan="2"
             Grid.Row="0"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill">


             
        <Label
            x:Name="LabelTemp"/>

        <Label
            x:Name="LabelCity"/>

        </Frame>
        

        <Frame 
             x:Name="umidade"
             Grid.Column="2"
             Grid.RowSpan="0"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill">

         </Frame>

         <Frame 
             x:Name="climax"
             Grid.Column="2"
             Grid.RowSpan="0"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill">

         </Frame>

    </Grid>

</ContentPage>
