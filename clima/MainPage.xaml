<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clima.MainPage"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="false">

    <Grid RowSpacing="10"
            ColumnSpacing="10"> 
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image 
                Source="imgnoite.jpg"
                Aspect="AspectFill"
                Grid.RowSpan="4"
                Grid.ColumnSpan="3"/>


        <Frame 
             x:Name="temperatura"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill"
             Grid.Column="0"
             Grid.Row="1"
             Grid.RowSpan="2">

             <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

        <Label
            x:Name="LabelTemp"
            Text="tempo"
            TextColor="White"/>

        <Label
            x:Name="Labelcurrently"
            Text="temperatura"
            TextColor="White"/>

        <Label
            x:Name="LabelCity"
            Text="cidade"
            TextColor="White"/>

        <Label
            x:Name="LabelDescription"
            Text="sol"
            TextColor="White"/>
        
        </Grid>
        </Frame>
        

        <Frame 
             x:Name="umidade"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill"
             Grid.Column="1"
             Grid.Row="1">

           <Label
            x:Name="LabelHumidity"
            Text="umidade"
            TextColor="White"/>

             <Label
            x:Name="LabelRain"
            Text="chuva"
            TextColor="White"/>

            <Label
            x:Name="Labelcondition_code"
            Text="chuva"
            TextColor="White"/>
        </Frame>

         <Frame 
             x:Name="climax"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill"
             Grid.Column="2"
             Grid.Row="1">

          <Label
            x:Name="LabelSunrise"
            Text="amanhecer"
            TextColor="White"/>

          <Label
            x:Name="Labelsunset"
            Text="anoitecer"
            TextColor="White"/>

        </Frame>

         
        <Frame 
             x:Name="vento"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill"
             Grid.Column="1"
             Grid.Row="2">

          <Label
            x:Name="labelwind_speedy"
            Text="força do vento"
            TextColor="White"/>

             <Label
            x:Name="Labelwind_direction"
            Text="direcao do vento"
            TextColor="White"/>

        </Frame>
         
        <Frame 
             x:Name="Vento"
             BackgroundColor="#20d0d0d0"
             CornerRadius="30"
             VerticalOptions="Fill"
             Grid.Column="2"
             Grid.Row="2">

         <Label
            x:Name="Labelmoon_phase"
            Text="fases da lua"
            TextColor="White"/>

         </Frame>

    </Grid>

</ContentPage>
